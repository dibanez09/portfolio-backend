{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"] // which files to skip,
}
